(include "./modules/base.yuck")

(defpoll power-icon
  :interval "60s"
  :initial "ï‰€ "
  `~/.config/eww/scripts/battery.sh icon`
  )

(defpoll power-status
  :interval "60s"
  :initial "discharging"
  `~/.config/eww/scripts/battery.sh status`
  )

(defwidget power []
  (circle-indicator
    :class "power ${power-status}"
    :value "${EWW_BATTERY["BAT0"].capacity}"
    :icon "${power-icon}"))
